@page "/help"
@model WiredBrainCoffeeAdmin.Pages.HelpModel
@{
}

<h1 class="h2">Request Help</h1>
<hr />

<table class="table table-striped table-bordered">
	<thead>
	<tr>
		<th>Id</th>
		<th>Title</th>
		<th>Description</th>
		<th>Status</th>
	</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.HelpTickets)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Title</td>
				<td>@item.Description</td>
				<td>@item.Status</td>
			</tr>
		}
	</tbody>
</table>